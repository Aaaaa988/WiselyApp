<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kiselev.wiselyapp">
    <application
        android:name=".database.DBHelper"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SpendIncomeDayActivity"
            android:label="@string/spendAndIncomeDay">
            <intent-filter>
                <action android:name="com.kiselev.wiselyapp.activities.SpendIncomeDayActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BDSettingsActivity"
            android:label="@string/bdsettings">
            <intent-filter>
                <action android:name="com.kiselev.wiselyapp.activities.BDSettingsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AnalyticsActivity"
            android:label="@string/analytic">
            <intent-filter>
                <action android:name="com.kiselev.wiselyapp.activities.AnalyticsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SpendIncomeActivity"
            android:label="@string/spendAndIncome">
            <intent-filter>
                <action android:name="com.kiselev.wiselyapp.activities.SpendIncomeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>